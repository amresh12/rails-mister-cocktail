

<div class="container">
  <h1> Our Cocktails</h1>
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
       <div class="cards">
        <% @cocktails.each do |cocktail| %>
        <div class="card">
          <div class="card-body">
            <div class="card-description">
              <h4><%= link_to cocktail.name, cocktail_path(cocktail) %> </h4>
              <%end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>









